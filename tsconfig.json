{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "lib",
    "baseUrl": ".",
    "module": "esnext",
    "target": "es6",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "sourceMap": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": false
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "lib",
    "src/**/*.stories.tsx",
    "src/**/*.test.tsx"
  ]
}
